{
    "name": "Cypht",
    "id": "cypht",
    "packaging_format": 1,
    "description": {
        "en": "Lightweight Open Source webmail written in PHP and JavaScript",
        "fr": "Webmail Open Source léger écrit en PHP et JavaScript"
    },
    "version": "1.3.0~ynh2",
    "url": "https://cypht.org",
    "upstream": {
        "license": "LGPL-2.1-only",
        "website": "https://cypht.org",
        "admindoc": "https://cypht.org/install.html",
        "code": "https://github.com/jasonmunro/cypht"
    },
    "license": "LGPL-2.1-only",
    "maintainer": {
        "name": "",
        "email": ""
    },
    "requirements": {
        "yunohost": ">= 11.0.9"
    },
    "multi_instance": true,
    "services": [
        "nginx",
        "php8.0-fpm",
        "mysql"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain"
            },
            {
                "name": "path",
                "type": "path",
                "example": "/cypht",
                "default": "/cypht"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "default": true
            },
            {
                "name": "language",
                "type": "string",
                "ask": {
                    "en": "Choose the application language",
                    "fr": "Choisissez la langue de l'application"
                },
                "choices": ["de", "en", "es", "fr", "it", "nl", "pt-BR"],
                "default": "fr"
            },
            {
                "name": "admin",
                "type": "user"
            },
            {
                "name": "password",
                "type": "password"
            }
        ]
    }
}
